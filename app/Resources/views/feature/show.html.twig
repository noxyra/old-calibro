{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feature</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feature.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ feature.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ feature.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ feature.icon }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_feature_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_feature_edit', { 'id': feature.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Texte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ texte.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ texte.intitule }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ texte.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_texte_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_texte_edit', { 'id': texte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends "NXBlogBundle::layout.html.twig" %}

{% block body %}

    <div class="container-fluid" style="height: 100%;">

        <div class="panel" style="width: auto; height: auto; margin: auto;margin-top: 30px; display: flex; flex-direction: column; border: none">
            <div class="panel-heading">
                <h1 style="font-size: 22px; margin: 10px;">
                    Profil
                    <a href="{{ path("fos_user_profile_edit") }}" title="modifier le profil" class="btn btn-xs pull-right btn-fill btn-success">Modifier le profil</a>
                </h1>
            </div>

            {# S'il y a une erreur, on l'affiche dans un joli cadre #}
            {% if error is defined %}
            <div class="panel-body">
                <div class="alert alert-danger">{{ error.message }}</div>
            </div>
            {% endif %}
            <div class="panel-body text-center">
                <img src="/web/{{ user.image.webPath() }}" style="width: 100px; height: 100px; border-radius: 50%; border: 5px solid grey;" />
            </div>
            <div class="list-group">
                {% block fos_user_content %}
                    {% include "NXUserBundle:Profile:show_content.html.twig" %}
                {% endblock fos_user_content %}
            </div>
        </div>
    </div>

{% endblock %}
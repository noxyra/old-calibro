{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Détail Projet
            </h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-body">
                    <table class="table table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ projet.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ projet.nom }}</td>
                        </tr>
                        <tr>
                            <th>Lien</th>
                            <td>{{ projet.lien }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ projet.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="box-footer">
                    <a class="btn btn-primary btn-block" href="{{ path('admin_projet_index') }}">Retourner à la liste</a>
                    <a class="btn btn-warning btn-block" href="{{ path('admin_projet_edit', { 'id': projet.id }) }}">Modifier</a>
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger btn-block" style="margin-top: 5px;" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}

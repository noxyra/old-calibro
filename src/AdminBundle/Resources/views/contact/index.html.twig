{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Liste des Messages
                <a class="btn btn-primary pull-right" href="{{ path('admin_contact_new') }}">Ajouter un nouveau Message</a>
            </h1>
        </section>

        <div class="content">
            <div class="box">
                <div class="box-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Objet</th>
                            <th>Message</th>
                            <th>Lu</th>
                            <th>Traite</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td><a href="{{ path('admin_contact_show', { 'id': contact.id }) }}">{{ contact.id }}</a></td>
                                <td>{{ contact.nom }}</td>
                                <td>{{ contact.email }}</td>
                                <td>{{ contact.objet }}</td>
                                <td>{{ contact.message }}</td>
                                <td>{% if contact.lu %}Yes{% else %}No{% endif %}</td>
                                <td>{% if contact.traite %}Yes{% else %}No{% endif %}</td>
                                <td>
                                    <a class="btn btn-xs btn-primary" href="{{ path('admin_contact_show', { 'id': contact.id }) }}">Voir</a>
                                    <a class="btn btn-xs btn-warning" href="{{ path('admin_contact_edit', { 'id': contact.id }) }}">Editer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

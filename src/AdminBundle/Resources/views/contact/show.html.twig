{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Messages
            </h1>
        </section>

        <section class="content">
            <div class="box">
                <div class="box-body">
                    <table class="table table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ contact.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ contact.nom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ contact.email }}</td>
                        </tr>
                        <tr>
                            <th>Objet</th>
                            <td>{{ contact.objet }}</td>
                        </tr>
                        <tr>
                            <th>Message</th>
                            <td>{{ contact.message }}</td>
                        </tr>
                        <tr>
                            <th>Lu</th>
                            <td>{% if contact.lu %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Traite</th>
                            <td>{% if contact.traite %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a class="btn btn-primary btn-block" href="{{ path('admin_contact_index') }}">Retourner Ã  la liste</a>
                    <a class="btn btn-warning btn-block" href="{{ path('admin_contact_edit', { 'id': contact.id }) }}">Modifier</a>
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger btn-block" style="margin-top: 5px;" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}

                </div>
            </div>
        </section>
    </div>




{% endblock %}

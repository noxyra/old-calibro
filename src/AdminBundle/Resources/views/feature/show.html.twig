{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="content-header">
            <h1>
                Feature
            </h1>
        </div>

        <div class="content">
            <div class="box">
                <div class="box-body">
                    <table class="table table-responsive">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ feature.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ feature.titre }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ feature.description }}</td>
                        </tr>
                        <tr>
                            <th>Icon</th>
                            <td>{{ feature.icon }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a class="btn btn-primary btn-block" href="{{ path('admin_feature_index') }}">Retourner Ã  la liste</a>
                    <a class="btn btn-warning btn-block" href="{{ path('admin_feature_edit', { 'id': feature.id }) }}">Modifier</a>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger btn-block" style="margin-top: 5px;" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}

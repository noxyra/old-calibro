{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <div class="content-header">
            <h1>
                Textes
                <a class="btn btn-primary pull-right" href="{{ path('admin_texte_new') }}">Ajouter un nouveau texte</a>
            </h1>
        </div>

        <div class="content">
            <div class="box">
                <div class="box-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Intitule</th>
                            <th>Contenu</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for texte in textes %}
                            <tr>
                                <td><a href="{{ path('admin_texte_show', { 'id': texte.id }) }}">{{ texte.id }}</a></td>
                                <td>{{ texte.intitule }}</td>
                                <td>{{ texte.contenu }}</td>
                                <td>
                                    <a class="btn btn-primary btn-xs" href="{{ path('admin_texte_show', { 'id': texte.id }) }}">Voir</a>
                                    <a class="btn btn-warning btn-xs" href="{{ path('admin_texte_edit', { 'id': texte.id }) }}">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
